<!DOCTYPE html>
{% set route_name = app.request.attributes.get('_route') %}
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Twitter scraper - Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
        {% block nav %}
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">Twitter scrapper</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item{% if route_name == "homepage" %} active{% endif %}">
                        <a class="nav-link" href="{{ path('homepage') }}">Setup</a>
                    </li>
                    <li class="nav-item{% if route_name == "tweets_table" %} active{% endif %}">
                        <a class="nav-link" href="{{ path('tweets_table') }}">List of tweets</a>
                    </li>
                    <li class="nav-item{% if route_name == "tweets_api" %} active{% endif %}">
                        <a class="nav-link disabled" href="{{ path('tweets_api') }}">List of tweets (json for api)</a>
                    </li>
                    </li>
                        <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                </ul>
                
            </div>
        </nav>
        {% endblock %}
        <div class="container-fluid">
            {% for message in app.flashes('success') %}
            <div class="row" style="position:absolute;width:100%;">
                <div class="col">
                    <div class="alert alert-primary padding alert-success" role="alert">
                        {{ message }}
                    </div>
                </div>
            </div>
            {% endfor %}
            {% for message in app.flashes('warning') %}
            <div class="row" style="position:absolute;width:100%;">
                <div class="col">
                    <div class="alert alert-primary padding alert-danger" role="alert">
                        {{ message }}
                    </div>
                </div>
            </div>
            {% endfor %}
            {% block breadcrumb %}
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">Home</li>
                    <li class="breadcrumb-item active" aria-current="page">Setup</li>
                </ol>
            </nav>
            {% endblock %}
        {% block body %}
        {% endblock %}
        </div>
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.min.js" ></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        
            <script type="text/javascript">
                $(document).ready(function() {
                    // show the alert
                    setTimeout(function() {
                        $(".alert").slideUp(500);
                    }, 12000);
                });
            </script>
        {% endblock %}
    </body>
</html>

