{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="/styles/login.css" >
{% endblock %}
{% block nav %}{% endblock %}
{% block breadcrumb %}{% endblock %}
{% block body %}
    <div class="owl">
    <div class="hand"></div>
    <div class="hand hand-r"></div>
    <div class="arms">
        <div class="arm"></div>
        <div class="arm arm-r"></div>
    </div>
    </div>
    <form class="form" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="control">
        <label for="name" class="fa fa-envelope"></label>
        <input placeholder="Name" name="name" type="text" value="{{ last_username }}"></input>
    </div>
    <div class="control">
    <label for="password" class="fa fa-asterisk"></label>
    <input name="password" id="password" placeholder="Password" type="password"></input>
    </div>
    <div class="control">
        <input type="submit" name="submit" value="Sign in">
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    </form>
{% endblock %}

{% block javascripts %}
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/scripts/script.js"></script>
{% endblock %}
